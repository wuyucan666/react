.wrap {
  width: 100%;
  position: relative;
}
.wrap :global {
  /* fix: pageloayout 组件的边距 */
}
.wrap :global .mask {
  width: 100%;
  height: 100%;
  z-index: 10;
  position: absolute;
  background: #fff;
}
.wrap :global .mask .content {
  position: absolute;
  top: 0;
  width: 900px;
  height: 600px;
  background: #fff;
  line-height: 1;
}
.wrap :global .mask .content .content-text1 {
  margin: 23px 0px 95px 0;
  font-size: 18px;
  font-family: PingFangSC-Regular;
  color: #333;
  font-weight: bold;
}
.wrap :global .layout-page {
  margin-bottom: 0 !important;
}
